---
import { ArrowRight, Calendar, Clock } from 'lucide-react'

  const posts = [
    {
      title: "The Polling Cycle and Evolving Public Opinion",
      date: "2024-11-18",
      readTime: "5 min read",
      excerpt: "Public opinion is changing - will polls keep up?",
      href: "/posts/polling-cycle"
    },
  ];
---

<section id="blog" class="py-12">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-8">Writing</h2>
    <ul class="space-y-8">
      {posts.map((post) => (
        <li class="group border-b border-gray-200 dark:border-gray-700 pb-8 last:border-b-0">
          <a href={post.href} class="block hover:bg-gray-50 dark:hover:bg-gray-800 rounded-lg transition-colors duration-200 p-4">
            <div class="flex flex-col sm:flex-row sm:items-center justify-between mb-2">
              <h3 class="text-lg font-medium text-gray-800 dark:text-gray-200 group-hover:text-primary transition-colors duration-200 mb-2 sm:mb-0">{post.title}</h3>
              <div class="flex items-center text-sm text-muted-foreground">
                <Calendar className="mr-2 h-4 w-4" />
                <span class="mr-4">{post.date}</span>
                <Clock className="mr-2 h-4 w-4" />
                <span>{post.readTime}</span>
              </div>
            </div>
            <p class="text-muted-foreground mb-2">{post.excerpt}</p>
            <div class="flex items-center text-primary font-medium">
              Read more
              <ArrowRight className="ml-2 h-4 w-4 transition-transform duration-200 group-hover:translate-x-1" />
            </div>
          </a>
        </li>
      ))}
    </ul>
  </div>
</section>
