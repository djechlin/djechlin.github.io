---
const { headings } = Astro.props;
---

<nav class="sticky top-8 max-h-[calc(100vh-4rem)] overflow-y-auto pr-2 text-sm [&::-webkit-scrollbar]:hidden [-ms-overflow-style:'none'] [scrollbar-width:'none']">
    <ul class="space-y-1">
        {headings.map((heading: any) => (
            <li class={`toc-item ${
                heading.depth === 2 ? 'mt-2' :
                heading.depth === 3 ? 'ml-2' :
                heading.depth === 4 ? 'ml-4' :
                heading.depth === 5 ? 'ml-6' :
                heading.depth === 6 ? 'ml-8' : ''
                }`}>
                <a
                href={`#${heading.slug}`}
                class="block hover:text-primary transition-colors ease-in-out rounded px-1 py-0.5 hover:bg-primary/10"
                >
                {heading.text}
            </a>
        </li>
        ))}
    </ul>
</nav>
