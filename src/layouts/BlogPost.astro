---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/globals.css'

// TODO: why is this nested under "content"? It's not in the docs or other examples.
const { title, date, author } = Astro.props.content;
---

<html lang="en">
    <body class="bg-background text-foreground min-h-screen flex flex-col">
        <Header />
        <main class="flex-1">
            <article class="container mx-auto px-4 py-8 max-w-3xl">
                <h1 class="text-4xl font-bold mb-4">{title}</h1>
                <div class="text-sm text-muted-foreground mb-8">
                    <span>{date}</span>â€¢<span>{author}</span>
                </div>
                <div class="prose dark:prose-invert prose-lg max-w-none">
                    <slot />
                </div>
            </article>
        </main>
        <Footer />
    </body>
</html>