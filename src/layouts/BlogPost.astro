---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import TableOfContents from '../components/TableOfContents.astro';
import '../styles/globals.css'

const { title, date, author, toc } = Astro.props.frontmatter;
const { headings } = Astro.props;
---
<meta charset="UTF-8" />
<html lang="en">
    <body class="bg-background text-foreground min-h-screen flex flex-col">
        <Header />
        <main class="flex-1">
            <div class="container mx-auto px-4 py-8 max-w-5xl">
                <div class="flex flex-col lg:flex-row gap-8">
                    <aside class="lg:w-1/5 order-2 lg:order-1">
                        { toc && <TableOfContents headings={headings} /> }
                    </aside>
                    <article class="lg:w-4/5 order-1 lg:order-2">
                        <h1 class="text-4xl font-bold mb-4">{title}</h1>
                        <div class="text-sm text-muted-foreground mb-8">
                            <span>{date}</span> â€¢ <span>{author}</span>
                        </div>
                        <div class="prose dark:prose-invert prose-lg max-w-none [&_li]:my-0 [&_ul]:my-0">
                            <slot />
                        </div>
                    </article>
                </div>
            </div>
        </main>
        <Footer />
    </body>
</html>

